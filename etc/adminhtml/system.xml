<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="carriers">
            <group id="dhlshipping" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>DHL Shipping</label>

                <!-- 010 Api Type -->
                <field id="api_type" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Type</label>
                    <frontend_model>Dhl\Shipping\Block\Adminhtml\System\Config\Form\Field\ApiType</frontend_model>
                </field>

                <!-- 100 General Settings -->
                <field id="fields_general" translate="label" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>General Settings</label>
                    <frontend_model>Dhl\Shipping\Block\Adminhtml\System\Config\Form\Field\Heading</frontend_model>
                </field>
                <!-- 110 Enabled -->
                <field id="active" translate="label" type="select" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <!-- 120 Title -->
                <field id="title" translate="label" type="text" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                </field>
                <!-- 130 Method Name -->
                <field id="name" translate="label" type="text" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Method Name</label>
                </field>
                <!-- 140 Sandbox Mode -->
                <field id="sandbox_mode" translate="label" type="select" sortOrder="140" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Sandbox Mode</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <!-- 150 Enable Logging -->
                <field id="logging_enabled" translate="label comment" type="select" sortOrder="150" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Enable Logging</label>
                    <comment/>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <!-- 160 Log Level -->
                <field id="log_level" translate="label comment" type="select" sortOrder="160" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Log Level</label>
                    <comment><![CDATA[Beware: Log level <em>Debug</em> will result in large log files.]]></comment>
                    <source_model>Dhl\Shipping\Model\Adminhtml\System\Config\Source\Loglevel</source_model>
                    <depends>
                        <field id="logging_enabled">1</field>
                    </depends>
                </field>

                <!-- 200 Account Data -->
                <field id="fields_account" translate="label comment" sortOrder="200" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Account Data</label>
                    <frontend_model>Dhl\Shipping\Block\Adminhtml\System\Config\Form\Field\Heading</frontend_model>
                </field>
                <!-- 210 User -->
                <field id="bcs_account_user" translate="label tooltip" type="text" sortOrder="210" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>User</label>
                    <tooltip>DHL contract customers receive the access data to the DHL Business Customer Portal via DHL Paket sales.</tooltip>
                    <depends>
                        <field id="sandbox_mode">0</field>
                        <field id="api_type">Geschäftskundenversand API</field>
                    </depends>
                </field>
                <!-- 220 Signature -->
                <field id="bcs_account_signature" translate="label tooltip" type="obscure" sortOrder="220" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Signature</label>
                    <tooltip>DHL contract customers receive the access data to the DHL Business Customer Portal via DHL Paket sales.</tooltip>
                    <depends>
                        <field id="sandbox_mode">0</field>
                        <field id="api_type">Geschäftskundenversand API</field>
                    </depends>
                </field>
                <!-- 230 EKP -->
                <field id="bcs_account_ekp" translate="label tooltip" type="text" sortOrder="230" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>EKP</label>
                    <tooltip>DHL contract customers receive the access data to the DHL Business Customer Portal via DHL Paket sales.</tooltip>
                    <depends>
                        <field id="sandbox_mode">0</field>
                        <field id="api_type">Geschäftskundenversand API</field>
                    </depends>
                </field>
                <!-- 240 Participation Numbers -->
                <field id="bcs_account_participation" type="select" translate="label" sortOrder="240" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Participation Numbers</label>
                    <frontend_model>Dhl\Shipping\Block\Adminhtml\System\Config\Form\Field\Participation</frontend_model>
                    <backend_model>Dhl\Shipping\Model\Adminhtml\System\Config\Serialized\ArraySerialized</backend_model>
                    <depends>
                        <field id="sandbox_mode">0</field>
                        <field id="api_type">Geschäftskundenversand API</field>
                    </depends>
                </field>
                <!-- 250 Pickup Account Number Sandbox -->
                <field id="gl_pickup_number_sandbox" type="text" translate="label" sortOrder="250" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Pickup Account Number</label>
                    <validate>number</validate>
                    <depends>
                        <field id="sandbox_mode">1</field>
                        <field id="api_type">Global Label API</field>
                    </depends>
                </field>
                <!-- 260 Pickup Account Number Production -->
                <field id="gl_pickup_number_production" type="text" translate="label" sortOrder="260" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Pickup Account Number</label>
                    <validate>number</validate>
                    <depends>
                        <field id="sandbox_mode">0</field>
                        <field id="api_type">Global Label API</field>
                    </depends>
                </field>

                <!-- 300 Shipment Orders -->
                <field id="fields_shipment_orders" translate="label" sortOrder="300" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Shipment Orders</label>
                    <frontend_model>Dhl\Shipping\Block\Adminhtml\System\Config\Form\Field\Heading</frontend_model>
                </field>
                <!-- 310 Print Only If Codeable -->
                <field id="bcs_shipment_printonlyifcodeable" translate="label" type="select" sortOrder="310" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Print Only If Codeable</label>
                    <tooltip><![CDATA[If set to <em>Yes</em>, shipping order requests will only return a label if the DHL delivery address verification succeeds.]]></tooltip>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="api_type">Geschäftskundenversand API</field>
                    </depends>
                </field>
                <!-- 320 Ship to Applicable Countries -->
                <field id="sallowspecific" translate="label" type="select" sortOrder="320" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Ship to Applicable Countries</label>
                    <frontend_class>shipping-applicable-country</frontend_class>
                    <source_model>Magento\Shipping\Model\Config\Source\Allspecificcountries</source_model>
                    <depends>
                        <field id="api_type">Geschäftskundenversand API</field>
                    </depends>
                </field>
                <!-- 330 Ship to Specific Countries -->
                <field id="specificcountry" translate="label" type="multiselect" sortOrder="330" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Ship to Specific Countries</label>
                    <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                    <can_be_empty>1</can_be_empty>
                    <depends>
                        <field id="api_type">Geschäftskundenversand API</field>
                    </depends>
                </field>
                <!-- 340 Shipping Methods for DHL Shipping -->
                <field id="shipment_dhlmethods" translate="label tooltip comment" type="multiselect" sortOrder="340" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Shipping Methods for DHL Shipping</label>
                    <tooltip>Select shipping methods for rate calculation in checkout.</tooltip>
                    <comment>These shipping methods will be processed with DHL Shipping.</comment>
                    <source_model>Magento\Shipping\Model\Config\Source\Allmethods</source_model>
                    <depends>
                        <field id="api_type">Geschäftskundenversand API</field>
                    </depends>
                </field>
                <!-- 350 Cash On Delivery Payment Methods for DHL Shipping -->
                <field id="shipment_dhlcodmethods" translate="label tooltip" type="multiselect" sortOrder="350" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Cash On Delivery Payment Methods for DHL Shipping</label>
                    <tooltip>These payment methods will be treated as COD methods during shipping order requests.</tooltip>
                    <source_model>Magento\Payment\Model\Config\Source\Allmethods</source_model>
                    <depends>
                        <field id="api_type">Geschäftskundenversand API</field>
                    </depends>
                </field>
                <!-- 360 Default Product -->
                <field id="default_product" translate="label" type="select" sortOrder="360" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Default Product</label>
                    <source_model>Dhl\Shipping\Model\Adminhtml\System\Config\Source\Product</source_model>
                    <depends>
                        <field id="api_type">Global Label API</field>
                    </depends>
                </field>
                <!-- 370 Label Size -->
                <field id="label_size" translate="label" type="select" sortOrder="370" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Label Size</label>
                    <source_model>Dhl\Shipping\Model\Adminhtml\System\Config\Source\LabelSize</source_model>
                    <depends>
                        <field id="api_type">Global Label API</field>
                    </depends>
                </field>
                <!-- 380 Page Size -->
                <field id="page_size" translate="label" type="select" sortOrder="380" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Page Size</label>
                    <source_model>Dhl\Shipping\Model\Adminhtml\System\Config\Source\PageSize</source_model>
                    <depends>
                        <field id="api_type">Global Label API</field>
                    </depends>
                </field>
                <!-- 390 Page Layout -->
                <field id="page_layout" translate="label" type="select" sortOrder="390" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Page Layout</label>
                    <source_model>Dhl\Shipping\Model\Adminhtml\System\Config\Source\PageLayout</source_model>
                    <depends>
                        <field id="page_size">0</field>
                        <field id="api_type">Global Label API</field>
                    </depends>
                </field>

                <!-- 400 Contact Information -->
                <field id="fields_contact" translate="label" sortOrder="400" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Contact Information</label>
                    <frontend_model>Dhl\Shipping\Block\Adminhtml\System\Config\Form\Field\Heading</frontend_model>
                    <depends>
                        <field id="api_type">Geschäftskundenversand API</field>
                    </depends>
                </field>
                <!-- 410 Name of Company (2) -->
                <field id="bcs_shipper_contact_company_addition" translate="label" type="text" sortOrder="410" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Name of Company (2)</label>
                    <depends>
                        <field id="api_type">Geschäftskundenversand API</field>
                    </depends>
                </field>
                <!-- 420 Dispatching Information -->
                <field id="bcs_shipper_contact_dispatchinfo" translate="label" type="text" sortOrder="420" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Dispatching Information</label>
                    <depends>
                        <field id="api_type">Geschäftskundenversand API</field>
                    </depends>
                </field>
                <!-- 430 First Name and Last Name of Contact Person -->
                <field id="bcs_shipper_contact_person" translate="label" type="text" sortOrder="430" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>First Name and Last Name of Contact Person</label>
                    <depends>
                        <field id="api_type">Geschäftskundenversand API</field>
                    </depends>
                </field>

                <!-- 500 Bank Data -->
                <field id="fields_bank_data" translate="label" sortOrder="500" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Bank Data</label>
                    <frontend_model>Dhl\Shipping\Block\Adminhtml\System\Config\Form\Field\Heading</frontend_model>
                    <depends>
                        <field id="api_type">Geschäftskundenversand API</field>
                    </depends>
                </field>

                <!-- 510 Bank Data -->
                <field id="bcs_bankdata_account_owner" translate="label" type="text" sortOrder="510" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Account Owner</label>
                    <depends>
                        <field id="api_type">Geschäftskundenversand API</field>
                    </depends>
                </field>
                <!-- 520 Bank Name -->
                <field id="bcs_bankdata_bankname" translate="label" type="text" sortOrder="520" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Bank Name</label>
                    <depends>
                        <field id="api_type">Geschäftskundenversand API</field>
                    </depends>
                </field>
                <!-- 530 IBAN -->
                <field id="bcs_bankdata_iban" translate="label" type="text" sortOrder="530" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>IBAN</label>
                    <depends>
                        <field id="api_type">Geschäftskundenversand API</field>
                    </depends>
                </field>
                <!-- 540 BIC -->
                <field id="bcs_bankdata_bic" translate="label" type="text" sortOrder="540" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>BIC</label>
                    <depends>
                        <field id="api_type">Geschäftskundenversand API</field>
                    </depends>
                </field>
                <!-- 550 Reason for Payment -->
                <field id="bcs_bankdata_note1" translate="label" type="text" sortOrder="550" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Reason for Payment</label>
                    <depends>
                        <field id="api_type">Geschäftskundenversand API</field>
                    </depends>
                </field>
                <!-- 560 Reason for Payment -->
                <field id="bcs_bankdata_note2" translate="label" type="text" sortOrder="560" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Reason for Payment (2)</label>
                    <depends>
                        <field id="api_type">Geschäftskundenversand API</field>
                    </depends>
                </field>
                <!-- 570 Reason for Payment -->
                <field id="bcs_bankdata_account_reference" translate="label" type="text" sortOrder="570" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Account Reference to Customer Profile</label>
                    <depends>
                        <field id="api_type">Geschäftskundenversand API</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>
