<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="carriers">
            <group id="dhlversenden" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">

                <!-- dhl versenden fields - general -->
                <label>DHL Versenden</label>
                <field id="fields_general" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>General Settings</label>
                    <frontend_model>Dhl\Versenden\Block\Adminhtml\System\Config\Form\Field\Heading</frontend_model>
                </field>

                <!-- default fields - general -->
                <field id="active" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                </field>
                <field id="name" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Method Name</label>
                </field>

                <!-- dhl versenden fields - general -->
                <field id="sandbox_mode" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Sandbox Mode</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="logging_enabled" translate="label comment" type="select" sortOrder="60" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Enable Logging</label>
                    <comment><![CDATA[Please ensure that the Magento-Log is also activated. Data will be written to <em>dhl_versenden.log</em>.]]></comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="log_level" translate="label comment" type="select" sortOrder="70" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Log Level</label>
                    <comment><![CDATA[Beware: Log level <em>Debug</em> will result in large log files.]]></comment>
                    <source_model>Dhl\Versenden\Model\Adminhtml\System\Config\Source\Loglevel</source_model>
                    <depends>
                        <field id="logging_enabled">1</field>
                    </depends>
                </field>

                <!-- dhl versenden fields - account -->
                <field id="fields_account" translate="label comment" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Account Data</label>
                    <comment>Basic account data as required in production mode</comment>
                    <frontend_model>Dhl\Versenden\Block\Adminhtml\System\Config\Form\Field\Heading</frontend_model>
                </field>

                <field id="account_participation_numbers" type="select" translate="label" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Participation Numbers</label>
                    <frontend_model>Dhl\Versenden\Block\Adminhtml\System\Config\Form\Field\Participation</frontend_model>
                    <backend_model>Dhl\Versenden\Model\Adminhtml\System\Config\Serialized\ArraySerialized</backend_model>
                </field>

                <!-- dhl versenden fields - shipment -->
                <field id="fields_shipment_orders" translate="label" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Shipment Orders</label>
                    <frontend_model>Dhl\Versenden\Block\Adminhtml\System\Config\Form\Field\Heading</frontend_model>
                </field>

                <!-- default fields - shipment -->
                <field id="sallowspecific" translate="label" type="select" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Ship to Applicable Countries</label>
                    <frontend_class>shipping-applicable-country</frontend_class>
                    <source_model>Magento\Shipping\Model\Config\Source\Allspecificcountries</source_model>
                </field>
                <field id="specificcountry" translate="label" type="multiselect" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Ship to Specific Countries</label>
                    <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                    <can_be_empty>1</can_be_empty>
                </field>
                <field id="showmethod" translate="label" type="select" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Show Method if Not Applicable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="specificerrmsg" translate="label" type="textarea" sortOrder="140" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Displayed Error Message</label>
                </field>

                <!-- dhl versenden fields - shipment -->
                <field id="shipment_dhlmethods" translate="label tooltip comment" type="multiselect" sortOrder="150" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Shipping Methods for DHL Versenden</label>
                    <tooltip>Select shipping methods for rate calculation in checkout.</tooltip>
                    <comment>These shipping methods will be processed with DHL Versenden.</comment>
                    <source_model>Magento\Shipping\Model\Config\Source\Allmethods</source_model>
                </field>
                <field id="shipment_dhlcodmethods" translate="label tooltip" type="multiselect" sortOrder="160" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Cash On Delivery Payment Methods for DHL Versenden</label>
                    <tooltip>These payment methods will be treated as COD methods during shipping order requests.</tooltip>
                    <source_model>Magento\Payment\Model\Config\Source\Allmethods</source_model>
                </field>

                <!-- dhl versenden fields - contact -->
                <field id="fields_contact" translate="label" sortOrder="170" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Contact Information</label>
                    <frontend_model>Dhl\Versenden\Block\Adminhtml\System\Config\Form\Field\Heading</frontend_model>
                </field>
                <field id="sender_name" translate="label" type="text" sortOrder="180" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Name of Sender</label>
                </field>
                <field id="sender_company_fst" translate="label" type="text" sortOrder="190" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Name of Company Name</label>
                </field>
                <field id="sender_company_snd" translate="label" type="text" sortOrder="200" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Name of Company (2)</label>
                </field>
                <field id="sender_street_name" translate="label" type="text" sortOrder="210" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Street Name</label>
                </field>
                <field id="sender_house_number" translate="label" type="text" sortOrder="220" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>House number</label>
                </field>
                <field id="sender_addition" translate="label" type="text" sortOrder="230" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Address Addition</label>
                </field>
                <field id="sender_dispatch_info" translate="label" type="text" sortOrder="240" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Dispatching Information</label>
                </field>
                <field id="sender_phone" translate="label" type="text" sortOrder="250" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Phone Number</label>
                </field>
                <field id="sender_mail" translate="label" type="text" sortOrder="260" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Email Address</label>
                </field>
                <field id="sender_contact_person" translate="label" type="text" sortOrder="270" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>First Name and Last Name of Contact Person</label>
                </field>


                <!-- dhl versenden fields - bank data -->
                <field id="fields_bank_data" translate="label" sortOrder="280" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Bank Data</label>
                    <frontend_model>Dhl\Versenden\Block\Adminhtml\System\Config\Form\Field\Heading</frontend_model>
                </field>

                <field id="bank_data_owner" translate="label" type="text" sortOrder="290" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Account Owner</label>
                </field>

                <field id="bank_data_bankname" translate="label" type="text" sortOrder="300" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Bank Name</label>
                </field>

                <field id="bank_data_iban" translate="label" type="text" sortOrder="310" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>IBAN</label>
                </field>

                <field id="bank_data_bic" translate="label" type="text" sortOrder="320" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>BIC</label>
                </field>

                <field id="bank_data_note1" translate="label" type="text" sortOrder="330" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Reason for Payment</label>
                </field>

                <field id="bank_data_note2" translate="label" type="text" sortOrder="340" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Reason for Payment (2)</label>
                </field>

                <field id="bank_data_accountreference" translate="label" type="text" sortOrder="350" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Account Reference to Customer Profile</label>
                </field>

                <!-- dhl versenden fields - other -->
                <field id="fields_others" translate="label" sortOrder="360" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Others</label>
                    <frontend_model>Dhl\Versenden\Block\Adminhtml\System\Config\Form\Field\Heading</frontend_model>
                </field>

                <!-- default fields -->
                <field id="sort_order" translate="label" type="text" sortOrder="370" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Sort Order</label>
                </field>
            </group>
        </section>
    </system>
</config>
