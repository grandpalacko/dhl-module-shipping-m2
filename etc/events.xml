<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="payment_method_is_active">
        <observer name="versenden_disable_cod_payment" instance="Dhl\Versenden\Observer\DisableCodPaymentObserver"/>
    </event>
    <event name="sales_order_place_after">
        <observer name="versenden_update_carrier" instance="Dhl\Versenden\Observer\UpdateCarrierObserver" />
    </event>
    <event name="sales_model_service_quote_submit_success">
        <observer name="versenden_persist_info_to_address" instance="Dhl\Versenden\Observer\ShiftShippingInfoObserver" />
    </event>
    <event name="adminhtml_block_html_before">
        <observer name="versenden_extend_address_form" instance="Dhl\Versenden\Observer\ExtendAddressFormObserver" />
    </event>
    <event name="admin_sales_order_address_update">
        <observer name="versenden_update_shipping_info" instance="Dhl\Versenden\Observer\UpdateShippingInfoObserver" />
    </event>
</config>
